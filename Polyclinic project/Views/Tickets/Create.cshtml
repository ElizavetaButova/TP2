@model Polyclinic_project.Models.Tickets


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery") 
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Выдача талона</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="Doc_id">ФИО врача</label>
                <div class="col-md-10">
                    @Html.DropDownList("Doc_id",(SelectList)ViewBag.Doc_id, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Doc_id, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <label for="App_time">Время приёма</label>
                <div class="col-md-10">
                    @Html.DropDownList("App_time", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.App_time, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <label for="App_time">Номер медицинской карты</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.pat_fnln, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.pat_fnln, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <label for="App_time">Ваше ФИО</label>
                <div class="col-md-10">
                    @Html.DropDownList("Medcard_num", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Medcard_num, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
